<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".Activity.LendingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/one_fourty_two"
        android:paddingLeft="@dimen/twenty_four"
        android:paddingRight="@dimen/twenty_four"
        tools:ignore="MissingConstraints">

        <ImageView android:src="@drawable/welcomelogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ninty_five"
            android:layout_marginTop="@dimen/fifty_six"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_six"
            android:layout_marginTop="@dimen/fourty"
            android:padding="@dimen/twelve"
            android:background="@drawable/login_btn"
            android:text="GET SIGN IN"
            android:onClick="OpenLogin"
            android:textColor="@color/white"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_six"
            android:layout_marginTop="@dimen/fourty"
            android:padding="@dimen/twelve"
            android:background="@drawable/register_btn"
            android:text="GET SIGN IN"
            android:onClick="OpenReg"
            android:textColor="@color/white"
            tools:ignore="OnClick" />
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/input_password"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>