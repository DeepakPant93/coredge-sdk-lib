    <ImageView android:src="@drawable/logo_login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ninty_five"
        android:layout_marginTop="@dimen/thirty"
        android:layout_gravity="center_horizontal" />

    <!--  Email Label -->
        <EditText android:id="@+id/input_email1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty"
            android:inputType="textEmailAddress"
            android:background="@drawable/username"
            android:drawableLeft="@drawable/usericon"
            android:layout_marginTop="@dimen/fourty"
            android:paddingLeft="@dimen/ten"
            android:hint="  Email or Username" />

    <!--  Password Label -->
        <EditText android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty"
            android:background="@drawable/password"
            android:layout_marginTop="1dp"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/ten"
            android:drawableLeft="@drawable/passwordicon"
            android:hint="  Password"/>


    <ImageButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_six"
        android:layout_marginTop="@dimen/fourty"
        android:padding="@dimen/twelve"
        android:background="@drawable/login_btn"
        android:text="GET SIGN IN"
        android:textColor="@color/white"/>

